<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Product List</title>
</head>
<body>
    <div class="container-fluid">
        <h2 class="text-center my-4">Product List</h2>
        <div class="text-center mb-4">
            <a href="/create" class="btn btn-success">Create Product</a>
            <a href="/userlist" class="btn btn-dark">User list</a>
        </div>
        <div class="container">
            <div class="row">
                <% products.forEach(product => { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <img
                                class="card-img-top card_image"
                                src="<%= product.image && product.image.trim() !== '' ? '/uploads/' + product.image.split('/').pop() : '/path/to/default/image.jpg' %>"
                                alt="<%= product.name || 'Default Product Image' %>"
                            />                            
                                <h5 class="card-title"><%= product.name %></h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary"><%= product.brand %></h6>
                                <p class="card-text">$<%= product.price %></p>
                                <h7 class="card-title"><%= product.description %></h7>
                                <p class="card-text">Quantity: <%= product.quantity %></p>
                                <a href="/update/<%= product._id %>" class="btn btn-warning">Update</a>
                                <form action="/delete/<%= product._id %>" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

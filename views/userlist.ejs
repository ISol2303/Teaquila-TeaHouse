<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>User List</title>
</head>
<body>
    <div class="container">
        <h2>User List</h2>
        <a class="btn btn-success" href="/register">Đăng ký User</a>
        <a class="btn btn-dark" href="/">Back</a>
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %> <!-- Changed from products to users -->
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td>
                        <a href="/user/update/<%= user._id %>" class="btn btn-warning">Update</a>
                        <a href="/user/<%= user._id %>" class="btn btn-info">View</a>
                    </td>                    
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
